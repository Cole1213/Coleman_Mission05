@{
    ViewData["Title"] = "Calculator";
}
<br />
<div class="calculator">
    <h2>Tutoring Services Calculator</h2>
    <p>Use this calculator to estimate the cost of tutoring services based on the number of hours needed.</p>
    <label for="hours">Number of Hours Needed:</label>
    <input type="number" id="hours" min="0" step="1">
    <br>
    <label for="rate">Hourly Rate:</label>
    <input type="text" id="rate" value="$50" readonly>
    <br>
    <button id="calculateBtn">Calculate Total</button>
    <br>
    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly>
</div>

<script src="calculator.js"></script>
